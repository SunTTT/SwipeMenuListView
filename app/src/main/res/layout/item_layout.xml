        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/charProvince"
        android:text="G"
        android:textSize="70sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carNumberString"
        android:text="B6522"
        android:textSize="70sp"
